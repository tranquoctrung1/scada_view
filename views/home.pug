	.container-fluid.footer.d-none
		.row 
			.col-md-4
				#loading
					img.loading(src="/images/loading.svg", alt="", srcset="")
				#chartHour
			.col-md-4 
				#loading2
					img.loading(src="/images/loading.svg", alt="", srcset="")
				#chartDay
			.col-md-4 
				#loading3
					img.loading(src="/images/loading.svg", alt="", srcset="")
				#chartMonth
		.row.text-center
			.col-sm-3 
				h6.text-white Tổng số điểm: 
					span#totalSite.text-success
			.col-sm-3.d-none
				h6.text-white Số điểm có dữ liệu: 
					span#totalSiteHasValue.text-success 
			.col-sm-3.d-none
				h6.text-white Số điểm có đang hoạt đông: 
					span#totalSiteActing.text-success 
			.col-sm-3 
				h6.text-white Số điểm gữi trể dữ liệu: 
					span#totalSiteDelay.text-warning 
			.col-sm-3 
				h6.text-white Số điểm không có dữ liệu: 
					span#totalSiteNoValue.text-danger 
			.col-sm-3 
