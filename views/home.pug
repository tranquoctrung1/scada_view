			//- 							button.btn.btn-sm.btn-success.ml-5#btnExportAlarm Xuất file excel

			//- 					table#tableAlarmFooter
			//- 						thead.table-header
			//- 							tr
			//- 								th Thời gian cảnh báo
			//- 								th Mã vị trí
