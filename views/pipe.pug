    #nav-tabContent.tab-content
        #nav-home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='nav-home-tab') 
            .container-fluid
                .row
                    .col-sm-4.d-none
                        .input-group.mb-3
                            span#lbIdGroupPipe.input-group-text Id
                            input.form-control#idGroupPipe.form-select( type="text" aria-label='lbIdGroupPipe' aria-describedby='lbIdGroupPipe' )
                    .col-sm-4 
                        .input-group.mb-3
                            span#lbGroupPipeId.input-group-text Mã nhóm tuyến ống
                            input.form-control#groupPipeId.form-select( type="text" aria-label='lbGroupPipeId' aria-describedby='lbGroupPipeId' list="listGroupPipeId")
                            datalist#listGroupPipeId
                    .col-sm-4 
                        .input-group.mb-3
                            span#lbNameGroupPipe.input-group-text Tên nhóm tuyến ống
                            input.form-control#nameGroupPipe.form-select( type="text" aria-label='lbNameGroupPipe' aria-describedby='lbNameGroupPipe')
                    .col-sm-4 
                        .input-group.mb-3
                            span#lbColorGroupPipe.input-group-text Màu ống
                            input.form-control#colorGroupPipe(type='color' aria-label='lbColorGroupPipe' aria-describedby='lbColorGroupPipe' value="#2ecc71")
                    .col-sm-4 
                        .input-group.mb-3
                            span#lbDescriptionGroupPipe.input-group-text Mô tả
                            input.form-control#descriptionGroupPipe(type='text' aria-label='lbDescriptionGroupPipe' aria-describedby='lbDescriptionGroupPipe')
                    .col-sm-4 
                        .input-group.mb-3
                            span#lbSiteIdStart.input-group-text Điểm đầu 
                            input.form-control#startSiteId.form-select( type="text" aria-label='lbSiteIdStart' aria-describedby='lbSiteIdStart' list="listSiteStart")
                            datalist#listSiteStart
                    .col-sm-4
                        .input-group.mb-3
                            span#lbSiteIdEnd.input-group-text Điểm cuối 
                            input.form-control#endSiteId.form-select( type="text" aria-label='lbSiteIdEnd' aria-describedby='lbSiteIdEnd' list="listSiteEnd")
                            datalist#listSiteEnd
                    .col-12.button
                        .box-button 
                            button.btn.btn-success#btnInsertGroupPipe(type="button" onclick="InsertGroupPipe(this)") Thêm
                            button.btn.btn-info#btnUpdateGroupPipe(type="button" onclick="UpdateGroupPipe(this)") Sửa
                            button.btn.btn-danger#btnDeleteGroupPipe(type="button" onclick="DeleteGroupPipe(this)") Xóa

