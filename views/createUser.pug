extends ./partial/layout.pug
block linkcss
    link(rel="stylesheet", href="/css/createUser.css")
    link(rel="stylesheet", href="/css/pageCommon.css")
block content
    .container-fluid
        .row.title-pressure
            h3 Tạo Người Dùng
        .row.info
            .col-sm-6 
                .input-group.mb-3
                    span#lbUserName.input-group-text Tên đăng nhập
                    input.form-control#userName2.form-select( type="text" aria-label='lbUserName' aria-describedby='lbUserName' list="listUser")
                    datalist#listUser 
            .col-sm-6 
                .input-group.mb-3
                    span#lbPassword.input-group-text Mật khẩu
                    input.form-control#password.form-select( type="password" aria-label='lbPassword' aria-describedby='lbPassword' )
            .col-sm-6 
                .input-group.mb-3
                    span#lbEmail.input-group-text Email
                    input.form-control#email.form-select( type="email" aria-label='lbEmail' aria-describedby='lbEmail' )
            .col-sm-6 
                .input-group.mb-3
                    span#lbRole.input-group-text Quyền
                    input.form-control#role.form-select( type="text" aria-label='lbRole' aria-describedby='lbRole' list="listRole")
                    datalist#listRole
            .col-sm-6 
                .input-group.mb-3
                    button#lbStaffId.btn.btn-outline-primary(type='button')  Tên nhân viên
                    input.form-control#staffId.form-select( type="text" aria-label='lbStaffId' aria-describedby='lbStaffId' list="listStaffId")
                    datalist#listStaffId
            .col-sm-6 
                .input-group.mb-3
                    button#lbConsumerId.btn.btn-outline-primary(type='button') Tên khách hàng
                    input.form-control#consumerId.form-select( type="text" aria-label='lbConsumerId' aria-describedby='lbConsumerId' list="listConsumerId")
                    datalist#listConsumerId
            .col-sm-6.d-none
                .input-group.mb-3
                    span#lbId.input-group-text id
                    input.form-control#id.form-select( type="text" aria-label='lbId' aria-describedby='lbId' )
            .col-12.button
                .box-button 
                    button.btn.btn-success#btnInsert(type="button") Thêm
                    button.btn.btn-info#btnUpdate(type="button") Sửa
                    button.btn.btn-danger#btnDelete(type="button") Xóa
            #Model.modal.fade.bd-example-modal-lg(tabindex='-1' role='dialog' aria-labelledby='ModelLabel' aria-hidden='true')
                .modal-dialog.modal-lg(role='document')
                    .modal-content
                        .modal-header
                            h5#ModelLabel.modal-title Thêm Thông Tin
                            span.close-button(data-dismiss='modal') x
                        .modal-body
                            .row#rowStaff 
                                .col-sm-6 
                                    .input-group.mb-3
                                        span#lbModalFullNameStaff.input-group-text Họ tên nhân viên
                                        input.form-control#modalFullNameStaff.form-select( type="text" aria-label='lbModalFullNameStaff' aria-describedby='lbModalFullNameStaff' list="listModalFullNameStaff" onchange="modalFullNameStaffChanged(this)")
                                        datalist#listModalFullNameStaff
                                .col-sm-6 
                                    .input-group.mb-3
                                        span#lbModalTelephoneStaff.input-group-text Điện thoại
                                        input.form-control#modalTelephoneStaff.form-select( type="text" aria-label='lbModalTelephoneStaff' aria-describedby='lbModalTelephoneStaff')
                                .col-sm-12
                                    .input-group.mb-3
                                        span#lbModalAddressStaff.input-group-text Địa chỉ
                                        input.form-control#modalAddressStaff.form-select( type="text" aria-label='lbModalAddressStaff' aria-describedby='lbModalAddressStaff')
                                .col-sm-12.d-none
                                    .input-group.mb-3
                                        span#lbIdStaff.input-group-text Id
                                        input.form-control#modalIdStaff.form-select( type="text" aria-label='lbIdStaff' aria-describedby='lbIdStaff' )
                                .col-12.button
                                    .box-button 
                                        button.btn.btn-success#btnModalStaffInsert(type="button" onclick="insertStaff(this)") Thêm
                                        button.btn.btn-info#btnModalStaffUpdate(type="button" onclick="updateStaff(this)") Sửa
                                        button.btn.btn-danger#btnModalStaffDelete(type="button" onclick="deleteStaff(this)") Xóa
                            .row#rowConsumer
                                .col-sm-6 
                                    .input-group.mb-3
                                        span#lbModalFullNameConsumer.input-group-text Họ tên khách hàng
                                        input.form-control#modalFullNameConsumer.form-select( type="text" aria-label='lbModalFullNameConsumer' aria-describedby='lbModalFullNameConsumer' list="listModalFullNameConsumer" onchange="modalFullNameConsumerChanged(this)")
                                        datalist#listModalFullNameConsumer
                                .col-sm-6 
                                    .input-group.mb-3
                                        span#lbModalTelephoneConsumer.input-group-text Điện thoại
                                        input.form-control#modalTelephoneConsumer.form-select( type="text" aria-label='lbModalTelephoneConsumer' aria-describedby='lbModalTelephoneConsumer')
                                .col-sm-12
                                    .input-group.mb-3
                                        span#lbModalAddressConsumer.input-group-text Địa chỉ
                                        input.form-control#modalAddressConsumer.form-select( type="text" aria-label='lbModalAddressConsumer' aria-describedby='lbModalAddressConsumer')
                                .col-sm-12.d-none
                                    .input-group.mb-3
                                        span#lbIdConsumer.input-group-text Id
                                        input.form-control#modalIdConsumer.form-select( type="text" aria-label='lbIdConsumer' aria-describedby='lbIdConsumer' )
                                .col-12.button
                                    .box-button 
                                        button.btn.btn-success#btnModalConsumerInsert(type="button" onclick="insertConsumer(this)") Thêm
                                        button.btn.btn-info#btnModalConsumerUpdate(type="button" onclick="updateConsumer(this)") Sửa
                                        button.btn.btn-danger#btnModalConsumerDelete(type="button" onclick="deleteConsumer(this)") Xóa
                        .modal-footer
                            button.btn.btn-secondary(type='button' ) Đóng
block linkcriptbody
    script(src="/js/hostname.js")
    script(src="/js/staff.js")
    script(src="/js/consumer.js")
    script(src="/js/createUser.js")
    script(src="/js/util.js") 