extends ./partial/layout.pug
block linkcss
	link(rel="stylesheet", href="/css/historyAlarm.css")
	link(rel="stylesheet", href="/css/pageCommon.css")
block content
	.container-fluid
		.row.title-pressure
			h3 Lịch Sử Cảnh Báo
		.row.info
			.col-sm-6
				span.ml-2.mr-3 Giờ Bắt Đầu 
				input#startDate(type='datetime-local' name='startDate' value='' min='1970-01-01T00:00' max='')
			.col-sm-6
				span.ml-2.mr-3 Giờ Kết Thúc 
				input#endDate(type='datetime-local' name='startDate' value='' min='1970-01-01T00:00' max='')
			.col-sm-12.button.text-center
				button.btn.btn-primary.btn-md#viewHistoryAlarm Xem
		.row.result
			.loading
				img#loading.show(src='/images/loading.svg')
			.col-12 
				#tablePlaceHolder

block linkcriptbody
	script(src="/js/hostname.js") 
	script(src="/js/historyAlarm.js")
	script(src="/js/util.js") 
